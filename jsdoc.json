{
    "tags": {
        "allowUnknownTags": true
    },
    "xsource": {
        "include": [ 
            "src/extend.js",
            "src/utils.js",
            "src/i18n.js",
            "src/converter.js", 
            "src/text-converter.js", 
            "src/header-set.js",
            "src/recorder.js"
        ],
        "includePattern": ".+\\.js(doc)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "plugins": [ "plugins/markdown" ],
    "markdown": {
        "parser": "gfm",
        "githubRepoOwner": "danielwippermann",
        "githubRepoName": "resol-vbus"
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false
    },
    "xopts": {
        "template": "templates/haruki"
    }
}
